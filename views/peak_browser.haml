    .container
      // The original title 'peak john' was rejected.
      .row
        .col-md-10
          .header
            %h1= "ChIP-Atlas - Peak Browser"
            %p= "Visualize All Peaks from Published ChIP-Seq data."
        .col-md-2
          .dropdown-help
            .dropdown
