!!! 5
%html{ :lang => "en" }
  %head
    %meta{ :charset => "utf-8" }
    %meta{ "http-equiv" => "X-UA-Compatible", :content => "IE=edge" }
    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1" }

    %meta{ :name => "description", :content => "Browse and analyse the public ChIP-Seq/DNase-Seq/ATAC-Seq/Bisulfite-Seq data on your browser." }
    %meta{ :name => "author", :content => "Shinya Oki, Tazro Ohta" }

    %title= "ChIP-Atlas"

    // Bootstrap core and typeahead CSS
    %link{ :href => "#{app_root}/css/bootstrap.min.css", :rel => "stylesheet" }

    // Custom style for this website
    %link{ :href => "#{app_root}/style.css", :rel => "stylesheet"}
    %link{ :href => "#{app_root}/css/fontawesome.css", :rel => "stylesheet"}
    %link{ :href => "#{app_root}/css/brands.css", :rel => "stylesheet"}
    %link{ :href => "#{app_root}/css/solid.css", :rel => "stylesheet"}

  %body
    - @active_menu = nil
    != haml :_navigation

    .container
      .page-header
        %h1
          %i.fas.fa-mountain
          ChIP-Atlas
        %p
          A data-mining suite for exploring epigenomic landscapes by fully integrating #{@number_of_experiments} ChIP-seq, ATAC-seq and Bisulfite-seq experiments.

      .row.align-height
        .col-md-4
          %a.jumbotron-link{ href: "#{app_root}/peak_browser" }
            .jumbotron
              .row
                .col-xs-12.col-sm-4.col-icon
                  .icon
                    %i.fas.fa-glasses
                .col-xs-12.col-sm-8.col-labels
                  .header-text
                    %h3
                      Peak Browser
                  .labels
                    %span.label.label-primary
                      ChIP
                    %span.label.label-primary
                      ATAC
                    %span.label.label-primary
                      Bisulfite

        .col-md-4
          %a.jumbotron-link{ href: "#{app_root}/enrichment_analysis" }
            .jumbotron
              .row
                .col-xs-12.col-sm-4.col-icon
                  .icon
                    %i.fas.fa-hand-holding-heart
                .col-xs-12.col-sm-8.col-labels
                  .header-text
                    %h3
                      Enrichment Analysis
                  .labels
                    %span.label.label-primary
                      ChIP
                    %span.label.label-primary
                      ATAC
                    %span.label.label-primary
                      Bisulfite

        .col-md-4
          %a.jumbotron-link{ href: "#{app_root}/diff_analysis" }
            .jumbotron
              .row
                .col-xs-12.col-sm-4.col-icon
                  .icon
                    %i.fas.fa-balance-scale-left
                .col-xs-12.col-sm-8.col-labels
                  .header-text
                    %h3
                      Diff Analysis
                  .labels
                    %span.label.label-primary
                      ChIP
                    %span.label.label-primary
                      ATAC
                    %span.label.label-primary
                      Bisulfite

      .row.align-height
        .col-md-4
          %a.jumbotron-link{ href: "#{app_root}/target_genes" }
            .jumbotron
              .row
                .col-xs-12.col-sm-4.col-icon
                  .icon
                    %i.fas.fa-bullseye
                .col-xs-12.col-sm-8.col-labels
                  .header-text
                    %h3
                      Target Genes
                  .labels
                    %span.label.label-primary
                      ChIP

        .col-md-4
          %a.jumbotron-link{ href: "#{app_root}/colo" }
            .jumbotron
              .row
                .col-xs-12.col-sm-4.col-icon
                  .icon
                    %i.fas.fa-compress-arrows-alt
                .col-xs-12.col-sm-8.col-labels
                  .header-text
                    %h3
                      Colocalization
                  .labels
                    %span.label.label-primary
                      ChIP

        .col-md-4
          %a.jumbotron-link{ href: "#{app_root}/search" }
            .jumbotron
              .row
                .col-xs-12.col-sm-4.col-icon
                  .icon
                    %i.fas.fa-search
                .col-xs-12.col-sm-8.col-labels
                  .header-text
                    %h3
                      Dataset Search
                  .labels
                    %span.label.label-primary
                      ChIP
                    %span.label.label-primary
                      ATAC
                    %span.label.label-primary
                      Bisulfite

      .row
        .col-md-10.col-md-offset-2
          != markdown(:updates, layout: false, fenced_code_blocks: true, autolink: true)

    != haml :footer

    /
      Bootstrap Core Javascript
      =========================
    %script{ :src => "#{app_root}/js/jquery.min.js" }
    %script{ :src => "#{app_root}/js/bootstrap.min.js" }
    %script{ :src => "#{app_root}/js/pj/pj.js" }
